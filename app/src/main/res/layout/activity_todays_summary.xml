<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.hassanmalik.echallan.sergeant.Activities.todaysSummary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/headerrelativeLayout">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnNxt_today_sum"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/next"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/Date"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/header_txt_size"
            android:id="@+id/textView55" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Date"
            android:id="@+id/date_today_Sumary"
            android:layout_toEndOf="@+id/textView55"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:textSize="@dimen/header_txt_size"
            android:textStyle="bold" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Grey"
        android:id="@+id/view"
        android:layout_below="@+id/headerrelativeLayout">
    </View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:id="@+id/childrelativeLayout"
        android:layout_below="@+id/view">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/list_today_summary"
            >
        </ListView>


    </RelativeLayout>

</RelativeLayout>