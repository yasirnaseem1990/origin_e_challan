<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.hassanmalik.echallan.sergeant.fragm.reviewChallanInfo">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/headerrelativeLayout">
        <ImageView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnSubmit_review_chlan_info"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/submitfooter"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/reviewchallaninfo"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/header_txt_size" />
        </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Grey"
        android:id="@+id/view"
        android:layout_below="@+id/headerrelativeLayout">
    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/bottomLinearLayout"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:id="@+id/childrelativeLayout"
        android:layout_below="@+id/view">



        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/list_review_challan_info"
            android:layout_below="@+id/etSearch">

        </ListView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:paddingLeft="10dp"
        android:id="@+id/bottomLinearLayout"
        android:paddingRight="10dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:id="@+id/sbmt_review_challan_info"
            android:src="@drawable/submitfooter" />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:id="@+id/edit_review_challan_info"
            android:layout_centerHorizontal="true"
            android:src="@drawable/editfooter" />


        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/cncl_review_chlan_info"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_alignParentEnd="true"
            android:src="@drawable/cancelff" />


    </LinearLayout>

    </RelativeLayout>

