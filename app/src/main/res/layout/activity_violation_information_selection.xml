<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="com.example.hassanmalik.echallan.sergeant.Activities.ViolationInformationSelection">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/headerrelativeLayout">
        <ImageView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Violation_info_selec"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/next"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/violationinormationheader"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/header_txt_size" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Grey"
        android:id="@+id/view"
        android:layout_below="@+id/headerrelativeLayout">

    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/bottomRelativeLayout"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:paddingRight="10dp"
        android:id="@+id/childrelativeLayout"
        android:layout_below="@+id/view">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/selection_header_title"
            android:textColor="@color/Sumarycolor"
            android:text="@string/selection_header_title"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Search for Violations "
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"

            android:background="@drawable/spinner"
            android:layout_below="@+id/selection_header_title"
            android:id="@+id/etSearch"
            />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/list_violator_info_selection"
            android:layout_below="@+id/etSearch">

        </ListView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:id="@+id/bottomRelativeLayout"
        android:paddingRight="10dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/cncl_violation_info_selc"
            android:src="@drawable/cancelfooter" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/nxtviolation_info_selc"
            android:layout_alignParentEnd="true"
            android:src="@drawable/nextfoter" />

    </RelativeLayout>



</RelativeLayout>